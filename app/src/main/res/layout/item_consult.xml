<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/item_consult_cover_container"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp">

            <ImageView

                android:id="@+id/item_consult_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sample_user" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/item_consult_details"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/item_consult_contact"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/item_consult_cover_container"
            android:layout_centerVertical="true">


            <TextView
                android:id="@+id/item_consult_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/consult"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:fontFamily="sans-serif"
                android:textColor="@color/text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="17dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_consult_occupation"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colourAccent"
                    android:text="@string/consult"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colourAccent"
                    android:gravity="center_vertical"

                    />

                <TextView
                    android:id="@+id/item_consult_timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableLeft="@drawable/ic_ago"
                    android:textColor="@color/text_lite"
                    android:drawableTint="@color/text_lite"
                    android:text="@string/consult"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"

                    />
            </LinearLayout>






        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:id="@+id/item_consult_contact">

            <ImageView

                android:id="@+id/item_consult_call"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/white_circle"

                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/blue"
                android:padding="10dp"
                android:src="@drawable/ic_call"
                app:tint="@color/white" />


            <ImageView

                android:id="@+id/item_consult_wa"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/white_circle"

                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/green"
                android:padding="10dp"
                android:src="@drawable/ic_chat"
                app:tint="@color/white" />





        </LinearLayout>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lite" />





</LinearLayout>



