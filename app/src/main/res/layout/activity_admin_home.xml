<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.exampleee.agroapk.activity.AdminHomeActivity">

    <!-- Add Product Button -->
    <Button
        android:id="@+id/go_to_add_product_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:background="@drawable/capsule"

        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- Add Consult Button -->
    <Button
        android:id="@+id/consult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Consult"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/go_to_add_product_btn"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- Decorative Line -->
    <View
        android:id="@+id/decorative_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#C0C0C0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/consult"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Decorative Image -->
    <ImageView
        android:id="@+id/decorative_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/companylogo"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:padding="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decorative_line" />

</androidx.constraintlayout.widget.ConstraintLayout>
