<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/about_us_image"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/company_owner_pic"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:padding="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/text_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/aclonica"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#008577"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/text_company_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Green care agro tech was established in the year 2014, in Shrirampur. To enhance yield and promote sustainable production, we manufacture a variety of high-quality plant nutrition products suitable for all types of crops.\n\n\These include Amino Acids Chelates, EDTA Chelates, Micronutrient Mixture Fertilizers, Certified Organic Micronutrients, Organic Fertilizers, Organic Acid Series, Water-Soluble Fertilizers, Natural Biostimulants, Spray Adjuvants, Plant Growth Regulators, Soil and Water Conditioners, Biofertilizers, Biofungicides, Biopesticides, and specific Crop-Specific Fertilizers.\n\nBoth companies contribute to the production of these products. We operate in more than 5 states in India and are soon expanding to cover the entire nation. Additionally, our products are exported to countries like Nepal, Sri Lanka, Vietnam, and more."
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_company_vision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISION"
            android:textSize="30sp"
            android:fontFamily="@font/jacques_francois_shadow"
            android:layout_marginLeft="100dp"
            android:textColor="#008577"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/text_company_vision_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/aclonica"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/green"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Quility"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_check_24"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Being Pioner"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_check_24"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excellence"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_check_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Respect Everyone"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_check_24"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commitment"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_check_24"/>



        <!-- Decorative Line -->
        <View
            android:id="@+id/decorative_line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#C0C0C0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text"
            android:layout_marginTop="32dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <!-- Below the decorative image -->
        <TextView
            android:id="@+id/about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed By"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/about_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEAM SNISHIELD"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="serif-monospace"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/about_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department of Information Technology"
            android:textSize="15sp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/about_us_scoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sanjivani College of Engineering,Kopargaon"
            android:textSize="10sp"
            android:fontFamily="serif-monospace"
            android:maxLines="1"
            android:textColor="@color/black"
            android:layout_gravity="center"/>



    </LinearLayout>
</ScrollView>
