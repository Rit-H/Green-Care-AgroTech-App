<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.agroapk.com.exampleee.agroapk.activity.Review_Activity">

    <!-- Review Title -->
    <TextView
        android:id="@+id/textViewReviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Reviews"
        android:fontFamily="@font/arbutus_slab"
        android:textColor="@color/red"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- VideoView -->
    <!-- VideoView -->
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewReviewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintWidth_default="wrap" />

    <!-- Review 1 -->
    <TextView
        android:id="@+id/textViewReview1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Excellent product! Very satisfied with the quality and performance.  -  AJAY JADHAV"
        app:layout_constraintTop_toBottomOf="@+id/webview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Review 2 -->
    <TextView
        android:id="@+id/textViewReview2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Since I started using the Plant Growth Regulator and Water Soluble Fertilizers from GreenCare AgroTech, I've noticed a dramatic improvement in both the growth rate and overall health of my crops.  -  ANIKET KALE"
        app:layout_constraintTop_toBottomOf="@+id/textViewReview1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Review 3 -->
    <TextView
        android:id="@+id/textViewReview3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="The nutrients are perfectly balanced, which seems to enhance the uptake and boosts the plants' vitality remarkably. I'm truly impressed with these products' efficiency.  -  HARSHAL DAHE"
        app:layout_constraintTop_toBottomOf="@+id/textViewReview2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- ScrollView for Images -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textViewReview3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <!-- Image 1 (Sample) -->
            <ImageView
                android:id="@+id/review_image1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/review_image1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

            <!-- Image 2 (Sample) -->
            <ImageView
                android:id="@+id/review_image2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/review_image2"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/review_image3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/review_image3"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

            <!-- Image 4 (Sample) -->
            <ImageView
                android:id="@+id/review_image4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/review_image4"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
