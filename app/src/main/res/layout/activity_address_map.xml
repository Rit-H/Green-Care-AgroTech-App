<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/address_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@drawable/border">

    <RelativeLayout
        android:id="@+id/item_address_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">


        <ImageView
            android:id="@+id/addressimage"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_below="@id/item_address_box"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/company_adresss"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/item_address_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressimage"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Vadala Mahadeo, JP56+X4M, Shrirampur-Newasa Rd, Maharashtra 413739, India"
            android:textColor="@color/text_lite"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="openGoogleMaps" />

        <ImageView
            android:id="@+id/address_company_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/item_address_address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/companylogo" />

    </RelativeLayout>

</RelativeLayout>
